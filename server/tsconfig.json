{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "../build",
    "baseUrl": "./src",
    "paths": {
      "@root": ["."],
      "@types": ["types"],
      "@interfaces": ["interfaces"],
      "@models": ["models"],
      "@services": ["services"],
      "@config": ["config"],
      "@daos": ["daos"],
      "@errors": ["api/errors"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
